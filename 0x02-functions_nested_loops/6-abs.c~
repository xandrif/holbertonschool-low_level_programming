#include "holberton.h"

/**
 * _abs - prints signs and things.
(* @n: an integer
 *
 * Description: returns absolute values for specified signs
(* section header: Section description)*
 * Return: 0 (Success)
 */


int _abs(int n)
{
	if (n < 0)
	{
		n = n * (-1);
		_putchar(n);
	}
	else if (n > 0)
	{
		_putchar(n);
	}
	else
	{
		_putchar(n);
	}
	return (0);
}
